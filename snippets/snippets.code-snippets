            "",
            "router.post('/', async(req, res) => {",
            "    try {",
            "        let apps = new Apps({",
            "            key:value",
            "        })",
            "        apps = await apps.save()",
            "        res.send(apps)",
            "    } catch (error) {",
            "        res.status(500).send(error.message)",
            "    }",
            "})",
            "",
            "router.get('/:id', async(req, res) => {",
            "    try {",
            "        const apps = await Apps.findById(req.params.id)",
            "        res.send(apps)",
            "    } catch (error) {",
            "        res.status(500).send(error.message)",
            "    }",
            "})",
            "",
            "router.put('/:id', async(req, res) => {",
