        "prefix": "!route.all",
        "body": [
            "const { Router } = require('express');",
            "const router = Router();",
            "const Apps = require('../model/Apps')",
            "",
            "router.get('/', async(req, res) => {",
            "    try {",
            "        const appss = await Apps.find()",
            "        res.send(appss)",
